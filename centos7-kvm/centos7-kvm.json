{
  "description": "CentOS 7 x86_64 MonkeyBox KVM",
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/00base.sh",
        "scripts/01grub.sh",
        "scripts/02sshd.sh",
        "scripts/03cloud.sh",
        "scripts/99cleanup.sh",
        "scripts/99minimize.sh"
      ]
    }
  ],
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "headless": false,
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-smp", "cpus=1,maxcpus=4,cores=2" ]
      ],
      "disk_size": 20480,
      "format": "qcow2",
      "disk_interface": "virtio",
      "net_device": "virtio-net",

      "iso_url": "http://mirror.nbrc.ac.in/centos/7/isos/x86_64/CentOS-7-x86_64-NetInstall-1804.iso",
      "iso_checksum": "937bf0a7b0932817f84f7230f15ed88911bbbd85c0c958680792b7f8d8f9c1a9",
      "iso_checksum_type": "sha256",

      "vm_name": "centos7-kvm-base",
      "output_directory": "dist",

      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,

      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,

      "ssh_username": "root",
      "ssh_password": "password",
      "ssh_port": 22,
      "ssh_wait_timeout": "30m",

      "boot_wait": "10s",
      "boot_command": [
        "<esc>",
        "<wait>",
        "linux inst.ks=http://{{.HTTPIP}}:{{.HTTPPort}}/kickstart.cfg biosdevname=0 net.ifnames=0",
        "<enter>"
      ],

      "shutdown_command": "shutdown -P now"
    }
  ]
}
